#post_show
	%h1= @post.title
	%p.username
		قبل
		= time_ago_in_words(@post.created_at)
	.clearfix
		.post_image_description
			= image_tag @post.image.url(:medium)
			.description= simple_format(@post.description)
		.post_data
			= link_to "رابط المشروع", @post.link, class: "btn btn-warning btn-block"
			= link_to like_post_path(@post), method: :get, class: "data" do
				%i.fa.fa-check
				= pluralize(@post.get_upvotes.size, "صح عليهم")
			%p.data
				%i.fa.fa-comments.o
				= pluralize(@post.comments.count, "Comment")
			- if @post.user == current_user
				= link_to "تعديل المشروع", edit_post_path(@post), class: "data"
				= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "متأكد؟" },class: "data"
		#random_post
			%h3 مشاريع أخرى
			.post
				.post_image
					= link_to (image_tag @random_post.image.url(:small)), post_path(@random_post)
				.post_content
					.title
						%h2= link_to @random_post.title, post_path(@random_post)
					.data.clearfix
						%p.username
							بواسطة
							= @random_post.user.name
						%p.buttons
							%span
								%i.fa.fa-comments-o
									= @random_post.get_likes.size
							%span
								%i.fa.fa-check
									= @random_post.comments.count

#comments
	%h2.comment_count= pluralize(@post.comments.count, "تعليقات على المشروع")
	- @comments.each do |comment|
		.comment
			%p.username= comment.user.name
			%p.content= comment.content
			= button_to 'مسح', [comment.post, comment],
               :method => :delete,
               data: { confirm: 'هل أنت متأكد؟..' }, class: "btn btn-link"
		
	= render "comments/form"
