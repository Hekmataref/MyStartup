<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>تسجيل حساب</h1>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        
        <div class="form-group">
          <%= f.label :name, label: "الأسم", required: true %>
          <%= f.text_field :name, class: "form-control",autofocus: true, required: true %>
        </div>
          
          <div class="form-group">
            <%= f.label :email, label: "البريد الإلكتروني" , required: true %>
            <%= f.email_field :email, class: "form-control" , required: true%>
        </div>
        
        <div class="form-group">
          <%= f.label :password, label: "الرمز السري" , required: true %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
      </div>
      
      <div class="form-group">
          <%= f.label :password_confirmation, label: "تأكيد الرمز السري" , required: true%>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
      </div>
      
      <div class="form-group">
        <%= f.submit "تسجيل", class: "btn btn-primary" %>
      </div>
      
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
      
      </div>
    </div>
  </div>
</div>